main
  position: relative
  background: rgba(200,0,0, 1)
  z-index: 1
  height: 100%
  margin-bottom: var(--footer-h)
  margin-top: var(--header-h)
  box-shadow: 0px 0px 5px 4px rgba(0,0,0, .33)
  display: flex
  align-items: center

.box
  width: 400px
  height: 400px
  margin: 0 auto
  padding: 2rem
  background: #fff
  display: flex
  align-items: center
  justify-content: center
  box-shadow: 0px 0px 5px 4px rgba(0,0,0, .33)

.box img
  margin-bottom: 2rem